<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1.0"
    tools:context="io.github.trankieu.izcalculator.MainActivity">

    <TextView
        android:id="@+id/txt_func"
        style="@style/text_func"
        android:layout_weight="0.1" />

    <TextView
        android:text="0"
        android:textSize="48sp"
        android:id="@+id/txt_ergebnis"
        style="@style/text_func"
        android:layout_weight="0.2" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:stretchColumns="*">

        <TableRow style="@style/row">

            <Button
                android:id="@+id/btn_anfang"
                style="@style/btn_borderles"
                android:text="On" />

            <Button
                android:id="@+id/btn_leer"
                style="@style/btn_borderles"
                android:text="C" />

            <Button
                android:id="@+id/btn_minus"
                style="@style/btn_borderles"
                android:text="-/+" />

            <Button
                android:id="@+id/btn_div"
                style="@style/btn_borderles"
                android:text="/" />
        </TableRow>

        <TableRow style="@style/row">

            <Button
                android:id="@+id/btn_7"
                style="@style/btn_borderles"
                android:text="7" />

            <Button
                android:id="@+id/btn_8"
                style="@style/btn_borderles"
                android:text="8" />

            <Button
                android:id="@+id/btn_9"
                style="@style/btn_borderles"
                android:text="9" />

            <Button
                android:id="@+id/btn_mul"
                style="@style/btn_borderles"
                android:text="x" />
        </TableRow>

        <TableRow style="@style/row">

            <Button
                android:id="@+id/btn_4"
                style="@style/btn_borderles"
                android:text="4" />

            <Button
                android:id="@+id/btn_5"
                style="@style/btn_borderles"
                android:text="5" />

            <Button
                android:id="@+id/btn_6"
                style="@style/btn_borderles"
                android:text="6" />

            <Button
                android:id="@+id/btn_sub"
                style="@style/btn_borderles"
                android:text="-"
                android:textSize="36sp" />
        </TableRow>

        <TableRow style="@style/row">

            <Button
                android:id="@+id/btn_1"
                style="@style/btn_borderles"
                android:text="1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/btn_borderles"
                android:text="2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/btn_borderles"
                android:text="3" />

            <Button
                android:id="@+id/btn_add"
                style="@style/btn_borderles"
                android:text="+" />
        </TableRow>

        <TableRow style="@style/row">

            <Button
                android:id="@+id/btn_null"
                style="@style/btn_borderles"
                android:text="0" />

            <Button
                android:id="@+id/btn_komma"
                style="@style/btn_borderles"
                android:gravity="top|center"
                android:text="."
                android:textSize="36sp" />

            <Button
                android:id="@+id/btn_result"
                style="@style/btn_borderles"
                android:layout_span="2"
                android:text="=" />
        </TableRow>
    </TableLayout>

</LinearLayout>
